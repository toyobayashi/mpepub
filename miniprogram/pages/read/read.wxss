.cover {
  width: 100%;
}

.read-page {
  display: flex;
  flex-direction: column;
}

.read-page .main {
  flex: 1;
  overflow-y: auto;
  box-sizing: border-box;
}

.read-page .main .main-wrap {
  padding: 10rpx 20rpx;
}

.read-page .nav {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.read-page .nav .btn {
  background: transparent;
  padding: 0;
  flex: 1;
  text-align: center;
  color: #666;
}

.read-page .nav .prog {
  flex: 2;
  text-align: center;
  color: #666;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 21rpx;
}
