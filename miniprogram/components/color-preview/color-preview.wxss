.preview-root {
	display: flex;
	align-items: center;
}

.color-preview {
  width: 100rpx;
  border: 2rpx solid #000;
	margin-left: 30rpx;
	height: 50rpx;
	margin-right: 30rpx;
}

.color-picker-modal {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.color-picker-modal .body {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 5rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.color-picker-modal .body .title {
	font-size: 32rpx;
	font-weight: bold;
	margin-bottom: 20rpx;
}

.color-str {
	font-size: 30rpx;
}

.btngroup {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.confirm-btn {
  /* display: inline-block; */
  width: 200rpx !important; 
}

.cancel-btn {
  /* display: inline-block; */
  width: 200rpx !important;
}